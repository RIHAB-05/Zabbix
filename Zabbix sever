--Mettre à jour MariaDB vers la version 10.5
sudo dnf module reset mariadb
sudo dnf module enable mariadb:10.5
sudo dnf install mariadb-server
sudo systemctl enable --now mariadb

--Installation des paquets Zabbix
sudo dnf install zabbix-server-mysql zabbix-web-mysql zabbix-apache-conf zabbix-sql-scripts zabbix-selinux-policy zabbix-agent

--Installer le logiciel du système de surveillance
rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/8/x86_64/zabbix-release-6.0-4.el8.noarch.rpm
dnf clean all

--Initialisation de la base Zabbix
sudo mysql -u root -p
CREATE DATABASE zabbix CHARACTER SET utf8mb4 COLLATE utf8mb4_bin;
create user zabbix@localhost identified by 'zabbix';
grant all privileges on zabbix.* to zabbix@localhost;
set global log_bin_trust_function_creators = 1;
exit;

--Import du schéma Zabbix
zcat /usr/share/zabbix-sql-scripts/mysql/server.sql.gz | mysql --default-character-set=utf8mb4 -uzabbix -p zabbix
--enter password : zabbix

--Modifier le paramètre
set global log_bin_trust_functuin_creators = 0; 

--Configuration Zabbix Server
Sudo nano /etc/zabbix/zabbix_server.conf

--modifier
DBPassword=zabbix
